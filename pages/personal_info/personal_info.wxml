<view class='con'>
  <view class='fir'>
       <image src="{{img}}" class='ffff'></image>
   </view>

   <view class='pr'></view>

   <view class='thr' >
       <view class='titem'>
           <text>昵称</text>
       </view>
       <view class='four'>
           <view class='fitem'>
               <view class='mar'>
                   <text class='mar'>{{name}}  ></text>
               </view>
           </view>
          
       </view>
   </view>

   <view class='pr'></view>

   <view class='thr' >
       <view class='titem'>
           <text>性别</text>
       </view>
       <view class='four'>
           <view class='fitem'>
               <view class='mar'>
                   <text class='mar'>{{sex}}  ></text>
               </view>
           </view>
           
       </view>
   </view>

   <view class='pr'></view>

   <view class='thr' >
       <view class='titem'>
           <text>微信号</text>
       </view>
       <view class='four'>
           <view class='fitem'>
               <view class='mar'>
                   <text class='mar'>{{wx}}  ></text>
               </view>
           </view>
           
       </view>
   </view>

   <view class='pr'></view>

   <view class='thr' >
       <view class='titem'>
           <text>手机</text>
       </view>
