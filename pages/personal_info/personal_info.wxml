           <view class='fitem'>
               <view class='mar'>
                   <text class='mar'>{{phone}}  ></text>
               </view>
           </view>
          
       </view>
   </view>

   <view class='pr'></view>

   <view class='thr' >
       <view class='titem'>
           <text>地址</text>
       </view>
       <view class='four'>
           <view class='fitem'>
               <view class='mar'>
                   <text class='mar'>{{province}}{{city}}  ></text>
               </view>
           </view>
           
       </view>
   </view>

  <view class='pr'></view>
  <view class='thr' >
      
       <view class='four' style="align:center">
           <view class='fitem' style="align:center">
