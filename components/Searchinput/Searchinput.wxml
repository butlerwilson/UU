<!--components/Searchinput/Searchinput.wxml-->
<view class="search_input">
<view class="all">
     <view class="all">
        <view class="searchbar">
            <view class="searchform">
            <!-- 搜索框 -->
                <view class="search__box">
                    <icon class="icon-search" type="search" size="14"></icon>
                    <input type="text" name="searchContent" bindinput="getSearch" class="searchinput" placeholder="请输入搜索内容"/>
                </view>
            </view>
            <!-- 搜索按钮,调用搜索查询方法 -->
            <view class="searchbtn" bindtap="search">搜索</view>
        </view>
    </view>
</view>

  
</view>
